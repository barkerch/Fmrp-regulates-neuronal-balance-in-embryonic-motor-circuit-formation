var dir1 = "";
var t2 = "";
var dir2 = "";
var dir3 = "";

macro "Run macro [1]"
{
	waitForUser("open image");
//make projection of center of the stack, for start: (stack#/2)-6, for stop: (stack#/2)+6, change projection type at "projection="
	run("Z Project...", "start=__ stop=__ projection=[Standard Deviation]");
	

	//open ROI manager
	run("ROI Manager...");
	
	//manually draw entire spinal cord ROI in DAPI channel (ROI 1)
	//setTool("freehand");
	waitForUser("Draw whole spinal cord roi");
   	roiManager("Add");
  	roiManager("Show All without labels");
	roiManager("Show None");
	
	//manually draw ventral spinal cord ROI on DAPI channel (ROI 2)
	//setTool("freehand");
	waitForUser("Draw ventral spinal cord roi");
	roiManager("Add");
	roiManager("Show All without labels");
	roiManager("Show None");
	
	//manually draw SV2 ROI in SV2 channel (ROI 3)
	//setTool("freehand");
	waitForUser("Draw SV2 roi");
	roiManager("Add");
	roiManager("Show All without labels");
	roiManager("Show None");
	
	//Split Channels
	run("Split Channels");
	
	//selectWindow("desired channel name");	
	waitForUser("select PSD95 window")
	
//subtract background, rolling ball, change size at "rolling="
	run("Subtract Background...", "rolling=2");
	//run("Watershed");

	//get individual image statistics
	getRawStatistics(area, mean, min, max, std);
	
	//set threshold based on image statistics, can only go by whole std dev
	setThreshold(mean + std + std, 4012);
	
	//create mask based on threshold
	run("Create Mask");

	//run watershed algorithm 
	run("Watershed");
	
	//on PSD95 channel add ROI 1
	roiManager("Select", 0);
	
	//particle analyzer, start with ROI 1, change size at "size=" and circularity at "circularity="
	run("Set Measurements...", "area integrated redirect=None decimal=3");
	run("Analyze Particles...", "display clear summarize");
	
	//on PSD95 channel add ROI 2
	roiManager("Select", 1);
	
	//particle analyzer, start with ROI 2, change size at "size=" and circularity at "circularity="
	run("Set Measurements...", "area integrated redirect=None decimal=3");
	run("Analyze Particles...", "display clear summarize");

//selectWindow("desired channel name");	
	waitForUser("select SV2 window")
	
//subtract background, rolling ball, change size at "rolling="
	run("Subtract Background...", "rolling=2");
	//run("Watershed");

	//get individual image statistics
	getRawStatistics(area, mean, min, max, std);
	
	//set threshold based on image statistics, can only go by whole std dev
	setThreshold(mean + std + std, 4012);
	
	//create mask based on threshold
	run("Create Mask");

	//run watershed algorithm 
	run("Watershed");

		
   //on PSD95 channel add ROI 3
	roiManager("Select", 2);
	
	//particle analyzer, start with ROI 3, change size at "size=" and circularity at "circularity="
	run("Set Measurements...", "area integrated redirect=None decimal=3");
	run("Analyze Particles...", "display clear summarize");

   //measure ROI 1
	roiManager("Select", 0);
	run("Measure");
	
	//measure ROI 2
	roiManager("Select", 1);
	run("Measure");
	
	//measure ROI 3
	roiManager("Select", 2);
	run("Measure");
	
	//copy results to data collection document
	
	run("Close All");
	roiManager("Deselect");
	roiManager("Delete");
}
	
